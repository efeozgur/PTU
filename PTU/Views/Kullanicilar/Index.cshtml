@model List<PTU.Models.Personel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}
<br />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-users-cog"></i> Kullanıcı Yönetimi</h4>
                    <a href="/Kullanicilar/Ekle" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Kullanıcı
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Sicil No</th>
                                    <th>Unvan</th>
                                    <th>Admin?</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i+1)</td>
                                        <td>@Model[i].AdSoyad</td>
                                        <td>@Model[i].SicilNo</td>
                                        <td>@Model[i].Unvan</td>
                                        <td>
                                            @if (Model[i].IsAdmin)
                                            {
                                                <span class="badge bg-primary">Admin</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Kullanıcı</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Kullanicilar/Duzenle/@Model[i].Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                            <form asp-action="Sil" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@Model[i].Id" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Bu kullanıcı silinsin mi?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
