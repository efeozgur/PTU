@model PTU.Models.Personel
@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}
<br />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus"></i> Yeni Kullanıcı Ekle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Ekle" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                            <input asp-for="AdSoyad" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SicilNo" class="form-label">Sicil No</label>
                            <input asp-for="SicilNo" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Unvan" class="form-label">Unvan</label>
                            <input asp-for="Unvan" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" class="form-control" type="password" required />
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAdmin" class="form-check-label">Admin Yetkisi Ver</label>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Kaydet</button>
                            <a href="/Kullanicilar/Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                        @if (ViewBag.Hata != null)
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
