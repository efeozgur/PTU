@model PTU.Models.Personel
@{
    ViewData["Title"] = "Kullanıcıyı Düzenle";
}
<br />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-edit"></i> Kullanıcıyı Düzenle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Duzenle" method="post" autocomplete="off">
                        <input asp-for="Id" type="hidden" />
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                            <input asp-for="AdSoyad" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SicilNo" class="form-label">Sicil No</label>
                            <input asp-for="SicilNo" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Unvan" class="form-label">Unvan</label>
                            <input asp-for="Unvan" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" class="form-control" type="password" required />
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAdmin" class="form-check-label">Admin Yetkisi Var</label>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Güncelle</button>
                            <a href="/Kullanicilar/Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
