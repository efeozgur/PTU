@model Personel
@{
    ViewData["Title"] = "Ana Sayfa";
}
<br />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
           
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Hoş geldiniz, @Model.AdSoyad!</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <span class="badge bg-info text-dark fs-5">@Model.Unvan</span>
                        <span class="badge bg-secondary fs-5 ms-2">Sicil No: @Model.SicilNo</span>
                    </div>
                    <p>
                        Personel Tayin Uygulaması’na giriş yaptınız.
                        Buradan yeni tayin talebi oluşturabilir ve mevcut taleplerinizi görüntüleyebilirsiniz.
                    </p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="/TayinTalebi/Ekle" class="btn btn-success btn-lg">
                            <i class="fas fa-plus-circle"></i> Tayin Talebi Oluştur
                        </a>
                        <a href="/Kullanicilar/Taleplerim" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-list"></i> Taleplerim
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
