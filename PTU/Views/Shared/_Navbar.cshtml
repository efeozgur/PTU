@{
    var isAdmin = Context.Session.GetInt32("IsAdmin") == 1;
}
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Sol menü: Sidebar aç/kapat -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            @if (!isAdmin)
            {

                <a href="/" class="nav-link fw-bold">PTS <small class="text-muted">Personel Tayin Sistemi</small></a>
            }
        </li>
    </ul>

    <!-- Sağ menü -->
    <ul class="navbar-nav ml-auto">
        <!-- Kullanıcı adı -->
        <li class="nav-item d-flex align-items-center">
            <span class="nav-link text-dark">
                👤 @Context.Session.GetString("AdSoyad")
            </span>
        </li>

        <!-- Çıkış -->
        @if (Context.Session.GetString("AdSoyad") != null)
        {
            <li class="nav-item">
                <a class="nav-link text-danger" href="~/Login/Logout" title="Çıkış Yap">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </li>
        }
    </ul>
</nav>
